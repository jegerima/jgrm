        $('.btn0').click(function(){
          var result = prompt("Si fueras un animalito, cuál serias?", "Escribir aqui");
          if (result != null) {
            if(!isNaN(parseInt(result))){ 
                M.toast({html: 'Respuesta inválida! :('})
                return; 
            }

            if(result.toLowerCase()=='gallinita' || result.toLowerCase()=="pandita"){
                M.toast({html: 'Correcto! :)'})
                showContent();
            }else{
                M.toast({html: 'Respuesta incorrecta :('});
            }
          }
        });

      });

      function showContent() {
        $('.item0').velocity({opacity: 0}, {duration: 1500, complete: afterPass});
      }

      function afterPass() {
        $('.item0').remove();
        $('.item1').removeClass('hide');
        $('.item1').velocity({opacity: 1}, {duration: 1500});
      }
